{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "airbnb"
  ],
  "globals": {
    "jasmine": true,
    "expect": true,
    "window": false,
    "mocks": false,
    "angular": false,
    "console": false,
    "require": true,
    "inject": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "commonjs": true,
    "mocha": true
  },
  "rules": {
    "no-console": 1,
    "no-debugger": 1,
    "no-unreachable": 1,
    "quotes": [2, "single"],
    "semi": [1, "always"],
    "no-cond-assign": 1,
    "lines-around-comment": [
      2,
      {
        "beforeBlockComment": true,
        "allowBlockStart": true,
        "beforeLineComment": true
      }
    ],
    "no-multiple-empty-lines": [1, {"max": 2}],
    "keyword-spacing": 1,
    "curly": 1,
    "object-curly-spacing": 0,
    "eqeqeq": 1,
    "no-use-before-define": 1,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "new-parens": 1,
    "comma-dangle": 0,
    "space-before-function-paren": 0,
    "no-underscore-dangle": [
      1,
      {"allow": ["__env"]}
    ],
    "no-unused-vars": 1,
    "no-empty": 1,
    "no-invalid-this": 1,
    "no-invalid-regexp": 1,
    "dot-notation": 1,
    "brace-style": [2, "1tbs", {"allowSingleLine": false}],

    "arrow-parens": 1,
    "arrow-spacing": 1,
    "constructor-super": 1,
    "no-class-assign": 1,
    "no-dupe-class-members": 1,
    "no-var": 1,
    "object-shorthand": 1,
    "prefer-arrow-callback": 1,
    "prefer-const": 1
  }
}
